<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/end_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.android.gif.GifView
        android:id="@+id/gif_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:enabled="false" />

    <Button
        android:id="@+id/again_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/again" />

    <Button
        android:id="@+id/exit_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/exit_game" />

    <Button
        android:id="@+id/charts_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/charts" />

    <TextView
        android:id="@+id/txt_score"
        style="@style/ScoreStyle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/again_end"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_score"
        android:layout_centerHorizontal="true"
        android:src="@drawable/getscore" />

    <TextView
        android:id="@+id/txt_refresh"
        style="@style/ReStyle"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/txt_score"
        android:layout_toRightOf="@+id/txt_score"
        android:text="@string/refresh"
        android:visibility="gone" />

    <Button
        android:id="@+id/qq_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_score"
        android:background="@drawable/qq_share" />

    <TextView
        android:id="@+id/textView1"
        style="@style/ContentStyle"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/qq_share"
        android:text="秀一下" />

</RelativeLayout>