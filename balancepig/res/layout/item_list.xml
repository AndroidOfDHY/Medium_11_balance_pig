<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/item_content"
        style="@style/ContentStyle"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_img" />

    <TextView
        android:id="@+id/item_count"
        style="@style/ItemStyle"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/item_content"
        android:layout_alignBottom="@+id/item_content"
        android:layout_toRightOf="@+id/item_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/item_img"
        android:layout_alignLeft="@+id/item_content"
        android:layout_below="@+id/item_content"
        android:src="@drawable/gold" />

    <TextView
        android:id="@+id/item_money"
        style="@style/MoneyStyle"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@drawable/biankuang" />

</RelativeLayout>